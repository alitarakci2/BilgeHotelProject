@model RoomVM

@{
    ViewBag.Title = "AddProduct";
}


<style>
    .genislik {
        width: 300px;
    }
</style>



@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Oda ekleme Sayfasi
                </header>

                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2"> Oda Numarasi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Room.RoomNumber, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2">Kat bilgisi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Room.FloorNumber, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Oda Durumu</label>
                        <div class="col-sm-10">
                           
                            @Html.EnumDropDownListFor(model => model.Room.RoomStatus)
                        </div>
                    </div>

                    <br /> <br />





                    <div class="form-group">
                        <label class="col-sm-2">Oda Tipi</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Room.RoomTypeID, new SelectList(Model.RoomTypes, "ID", "TypeName"), "Lutfen seciniz", new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />



                    <div class="form-group">
                        <label class="col-sm-2">Resim seciniz</label>
                        <div class="col-sm-10">
                            <input type="file" name="image" class="form-control genislik" />
                            <br />
                            @Html.TextBox("fileName", null, new { @class = "form-control genislik", placeholder = "Resim ismi giriniz" })
                        </div>
                    </div>

                    <br /> <br />





                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>








                </div>


            </section>
        </div>
    </div>
}

