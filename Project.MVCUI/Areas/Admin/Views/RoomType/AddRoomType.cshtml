@model RoomTypeVM
@{
    ViewBag.Title = "AddRoomType";
}

<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Oda Tipi Ekleme Sayfası
                </header>

                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2">Oda Tipi Ismi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.RoomType.TypeName, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2">Fiyat</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.RoomType.UnitPrice, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Kisi Sayisi</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.RoomType.GuestCapacity, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>








                </div>


            </section>
        </div>
    </div>
}

