@model RoomTypeVM
@{
    ViewBag.Title = "RoomTypeList";
}

<script src="~/OuterTools/LightBox/lightbox-2.6.min.js"></script>
<link href="~/OuterTools/LightBox/lightbox.css" rel="stylesheet" />
<section class="panel">
    <header class="panel-heading">
        @Html.ActionLink("Oda Tipi Ekle", "AddRoomType", "RoomType", null, new { @class = "btn btn-primary" })
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>RoomType ID</th>
                        <th>RoomType Name</th>
                        <th class="hidden-phone">Price</th>
                        <th class="hidden-phone">Guest Capacity</th>
                        <th class="hidden-phone">Resmi</th>
                        <th class="hidden-phone">Status</th>
                        <th class="hidden-phone">Delete</th>
                        <th class="hidden-phone">Update</th>



                    </tr>
                </thead>
                <tbody>


                    @foreach (Project.ENTITIES.Models.RoomType item in Model.RoomTypes)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td>
                                @item.TypeName
                            </td>
                            <td class="hidden-phone">@item.UnitPrice</td>
                            <td class="center hidden-phone">@item.GuestCapacity</td>
                            <td>
                                <a href="@item.ImagePath" class="example-image-link" data-lightbox="example-1">


                                    <img width="30" height="30" title="@item.TypeName" src="@item.ImagePath" />


                                </a>




                            </td>



                            <td class="center hidden-phone">@item.Status</td>
                            <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteRoomType", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                            <td class="center hidden-phone">@Html.ActionLink("Guncelle", "UpdateRoomType", new { id = item.ID }, new { @class = "btn btn-warning" })</td>

                        </tr>



                    }


                </tbody>
            </table>

        </div>
    </div>
</section>

<script src="~/Areas/Admin/AdminScripts/AdminRoomTypeDTJ.js"></script>